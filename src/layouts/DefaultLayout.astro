---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <BaseHead title={title} />
  </head>
  <body>
    <div class="main__backsplash">
      <Header />
      <main>
        <section class="main__container">
          <slot />
        </section>
      </main>
    </div>

    <style>
      html,
      body {
        box-sizing: border-box;
        position: relative;
        background-color: #000;
        margin: 0;
      }
      .main__backsplash {
        min-height: 100%;
        min-width: 100%;
        width: 100%;
        background: green;
        background-image: url("https://wallpaperaccess.com/full/1840926.jpg");
        background-size: 250px;
      }
      .main__container {
        background-color: #000;
        color: red;
        margin: 0 auto;
        max-width: 850px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .page__details {
        padding: 2rem 0 2rem 0;
      }
      h2.page__title {
        font-size: 2.8rem;
        font-weight: 700;
        font-family: "New Rocker", sans-serif;
        text-align: center;
        padding-bottom: 0.5rem;
      }
      p.page__description {
        text-align: center;
      }
      main {
        flex-grow: 1;
      }

      /* Universal Styles */
      p {
        font-size: 16px;
        font-family: Arial, Helvetica, sans-serif;
      }

      @media screen and (min-width: 800px) {
        h2.page__title {
          padding: 0;
        }
        .page__details {
          padding: 0 0 1.5rem 0;
        }
      }
    </style>
  </body>
</html>

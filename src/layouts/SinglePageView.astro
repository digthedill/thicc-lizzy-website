---
const { page } = Astro.props;
---

<section id={page}>
  <div class="content-wrapper">
    <slot />
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: var(--max-content-width);
    max-height: 800px;
    width: 100%;
    height: 600px;
    background: var(--secondary-color);
    color: var(--primary-color);
  }
</style>

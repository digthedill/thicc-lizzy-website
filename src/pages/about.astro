---
import DefaultLayout from "../layouts/WrapperLayout.astro";
import { getEntry, getCollection } from "astro:content";
const aboutPage = await getEntry("pageData", "about");
const members = await getCollection("members");
---

<DefaultLayout title={aboutPage.data.title}>
  <p>{aboutPage.data.intro}</p>

  <hr />

  <p>{aboutPage.data.description}</p>

  {
    members.map((member) => (
      <div>
        <img src={member.data.image} alt={member.data.title} />
        <h3>{member.data.title}</h3>
        <p>{member.data.description}</p>
      </div>
    ))
  }
</DefaultLayout>

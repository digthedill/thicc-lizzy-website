<header>
  <!-- Hero -->
  <div class="splash_hero">
    <img
      src="https://www.udiscovermusic.com/wp-content/uploads/2020/01/Thin-Lizzy-GettyImages-84999283.jpg"
      alt="Thin Lizzy"
    />
    <h1 class="hero__text">Thicc Lizzy</h1>
  </div>
  <!-- Hamburger -->
  <div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
  <!-- Nav -->
  <nav class="container">
    <ul>
      <li class="nav__item"><a href="/">Home</a></li>
      <li class="nav__item"><a href="/shows">Shows</a></li>
      <li class="nav__item"><a href="/media">Media</a></li>
      <li class="nav__item"><a href="/about">About</a></li>
      <li class="nav__item"><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>

<script>
  const hamburger: HTMLElement | null = document.querySelector(".hamburger");
  const nav = document.querySelector("nav.container");
  if (!hamburger || !nav) {
    throw new Error("Hamburger or nav not found");
  }
  hamburger.addEventListener("click", () => {
    nav.classList.toggle("-mobile-expanded");
  });
</script>

<style>
  :root {
    --header-background-color: var(--primary-color-dark);
    --header-text-color: var(--secondary-color);
    --header-text-secondary-color: var(--secondary-color-dark);
  }

  /* Mobile */
  nav.container {
    display: none;
  }

  nav.container.-mobile-expanded {
    display: block;
    position: absolute;
    /* padding-top: 120px; */
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: var(--header-background-color);
    z-index: 5;
  }

  .hamburger {
    top: 2%;
    left: 2%;
    position: absolute;
    width: 20px;
    height: 18px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: var(--header-background-color);
    z-index: 10;
    border: 2px solid var(--accent-color);
    padding: 10px;
    border-radius: 5px;
  }

  .line {
    display: block;
    background: var(--accent-color);
    width: 100%;
    height: 3px;
  }
  .splash_hero {
    width: 100%;
    height: 200px;
    position: relative;
  }

  .splash_hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__text {
    font-size: 4rem;
    font-weight: 700;
    margin: 2rem 0 2rem 0;
    font-family: "New Rocker", sans-serif;
    position: absolute;
    top: 14%;
    text-align: center;
    width: 100%;
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: black;
  }

  ul {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-align: center;
    list-style: none;
  }
  .nav__item {
    margin: 25px 0;
  }

  .nav__item a {
    margin: 0 5px;
    border: 2px solid var(--header-background-color);
    padding: 3px 6px;
    text-decoration: none;
    color: var(--header-text-color);
    background-color: var(--header-background-color);
    font-family: var(--font-family-heading);
    font-size: 21px;
  }

  .nav__item a:hover {
    color: var(--header-text-secondary-color);
    border: 2px solid var(--header-text-secondary-color);
  }

  a.router-link-active {
    border: 2px solid var(--accent-color);
    color: white;
    background: var(--accent-color);
  }

  /* Desktop */
  @media screen and (min-width: 800px) {
    header {
      margin-bottom: 1rem;
      position: sticky;
      top: 0;
      width: 100%;
      background-color: var(--header-background-color);
    }
    nav.container {
      display: block;
      max-width: var(--max-content-width);
      margin: 0 auto;
    }
    .hamburger {
      display: none;
    }
    ul {
      display: flex;
      list-style: none;
      flex-direction: row;
      padding: 0;
      margin-right: 0;
      margin-top: 0;
      width: 100%;
      background-color: var(--header-background-color);
    }
    .nav__item a {
      font-size: 22px;
    }
  }
</style>

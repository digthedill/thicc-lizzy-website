<header>
  <!-- Hero -->
  <div class="splash_hero">
    <img
      src="https://www.udiscovermusic.com/wp-content/uploads/2020/01/Thin-Lizzy-GettyImages-84999283.jpg"
      alt="Thin Lizzy"
    />
    <h1 class="hero__text">Thicc Lizzy</h1>
  </div>
  <!-- Hamburger -->
  <div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
  <!-- Nav -->
  <nav class="container">
    <ul>
      <li class="nav__item"><a href="/">Home</a></li>
      <li class="nav__item"><a href="/shows">Shows</a></li>
      <li class="nav__item"><a href="/media">Media</a></li>
      <li class="nav__item"><a href="/about">About</a></li>
      <li class="nav__item"><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</header>

<script>
  const hamburger: HTMLElement | null = document.querySelector(".hamburger");
  const nav = document.querySelector("nav.container");
  if (!hamburger || !nav) {
    throw new Error("Hamburger or nav not found");
  }
  hamburger.addEventListener("click", () => {
    nav.classList.toggle("-mobile-expanded");
  });
</script>

<style>
  nav.container {
    display: none;
  }

  nav.container.-mobile-expanded {
    display: block;
    position: absolute;
    /* padding-top: 120px; */
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 5;
  }

  .hamburger {
    top: 2%;
    left: 2%;
    position: absolute;
    width: 44px;
    height: 41px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: #000;
    z-index: 10;
    border: 2px solid red;
    padding: 10px;
    border-radius: 5px;
  }

  .line {
    display: block;
    background: red;
    width: 100%;
    height: 3px;
  }
  .splash_hero {
    width: 100%;
    height: 200px;
    position: relative;
  }

  .splash_hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__text {
    font-size: 4rem;
    font-weight: 700;
    margin: 2rem 0 2rem 0;
    font-family: "New Rocker", sans-serif;
    color: #fff;
    position: absolute;
    top: 14%;
    text-align: center;
    width: 100%;
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: black;
  }

  ul {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-align: center;
    list-style: none;
  }
  .nav__item {
    margin: 25px 0;
  }

  .nav__item a {
    margin-right: 25px;
    border: 2px solid #000;
    padding: 3px 6px;
    text-decoration: none;
    color: red;
    background-color: #000;
    font-family: "New Rocker";
    font-size: 35px;
    font-weight: bold;
  }

  .nav__item a:hover {
    border: 2px solid red;
  }

  a.router-link-active {
    border: 2px solid red;
    color: white;
    background: red;
  }

  @media screen and (min-width: 800px) {
    header {
      margin-bottom: 1rem;
    }
    nav.container {
      display: block;
    }
    .hamburger {
      display: none;
    }
    ul {
      display: flex;
      list-style: none;
      flex-direction: row;
      padding: 0;
      margin-right: 0;
      margin-top: 0;
      width: 100%;
      background-color: #000;
    }
    .nav__item a {
      font-size: 22px;
    }
  }
</style>
